<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="packagesLeaving_count" pageWidth="595" pageHeight="842" columnWidth="595" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">
	<property name="ireport.scriptlethandling" value="0"/>
	<property name="ireport.encoding" value="UTF-8"/>
	<import value="net.sf.jasperreports.engine.*"/>
	<import value="java.util.*"/>
	<import value="net.sf.jasperreports.engine.data.*"/>
	<parameter name="clinic" class="java.lang.String">
		<defaultValueExpression><![CDATA["a"]]></defaultValueExpression>
	</parameter>
	<parameter name="date" class="java.util.Date">
		<defaultValueExpression><![CDATA[new Date()]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[select count(packageid) as packageCounter from (

select distinct pack.packageid AS packageid, 
pack.dateleft, 
pat.patientid as patientid 

from package as pack, 
clinic as c, 
patient as pat,
packageddrugs as pd,
stock as s,
prescription as pre

where pd.parentpackage = pack.id
and pd.stock = s.id
and s.clinic = c.id
and c.clinicName like $P{clinic}
and pack.prescription = pre.id
and pre.patient = pat.id 

and date_part('day', pack.dateleft) = date_part('day', $P{date})
and date_part('month', pack.dateleft) = date_part('month', $P{date})
and date_part('year', pack.dateleft) = date_part('year', $P{date})

order by packageid

) as foo]]>
	</queryString>
	<field name="packageCounter" class="java.lang.Integer"/>
